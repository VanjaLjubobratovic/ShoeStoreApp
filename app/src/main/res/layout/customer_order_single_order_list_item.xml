<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/orderedItemImageView"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="0.3"
            app:srcCompat="@drawable/bag_image" />

        <TextView
            android:id="@+id/orderedItemModelColorTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.3"
            android:gravity="center_horizontal|center_vertical"
            android:text="Model name and color" />

        <TextView
            android:id="@+id/orderedItemSizeAmountTextView"
            android:gravity="center_horizontal|center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="Size and amount" />

        <TextView
            android:id="@+id/orderedItemPriceTextView"
            android:gravity="center_horizontal|center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="Price" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>